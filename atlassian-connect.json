{
  "key": "confluence-theme-test",
  "name": "A test add-on for theme",
  "description": "My very first app",
  "baseUrl": "https://randing89.github.io",
  "authentication": {
    "type": "none"
  },
  "modules": {
    "confluenceThemes": [
      {
        "key": "my-first-theme",
        "routeOverride": true,
        "name": {
          "value": "Theme with space override"
        },
        "routes": {
          "spaceview": {
            "url": "/confluence-theme-test/hello.html?key={space.key}"
          }
        }
      },
      {
        "key": "confluence-connect-dark-theme",
        "icon": {
          "width": 110,
          "height": 70,
          "url": "/icon.png"
        },
        "name": {
          "value": "Confluence Dark Theme"
        },
        "description": {
          "value": "A dark theme for Confluence."
        },
        "availableGlobally": true,
        "lookAndFeel": {
          "headings": {
            "color": "#333333"
          },
          "links": {
            "color": "#4B6380"
          },
          "menus": {
            "hoverOrFocus": {
              "backgroundColor": "#3873AE"
            },
            "color": "#732D3E"
          },
          "bordersAndDividers": {
            "color": "#0D0E0E"
          },
          "header": {
            "backgroundColor": "#1E252C",
            "button": {
              "backgroundColor": "#4372B1",
              "color": "#FFFFFF"
            },
            "primaryNavigation": {
              "hoverOrFocus": {
                "backgroundColor": "#333940",
                "color": "#FFFFFF"
              },
              "color": "#FFFFFF"
            },
            "secondaryNavigation": {
              "hoverOrFocus": {
                "backgroundColor": "#333940",
                "color": "#FFFFFF"
              },
              "color": "#000000"
            },
            "search": {
              "backgroundColor": "#205081",
              "color": "#FFFFFF"
            }
          },
          "content": {
            "screen": {
              "background": "#333940",
              "gutterTop": "20px",
              "gutterRight": "large",
              "gutterBottom": "20px",
              "gutterLeft": "large"
            },
            "container": {
              "background": "#EEEEEE",
              "padding": "0",
              "borderRadius": "10px"
            },
            "header": {
              "background": "#EEEEEE",
              "padding": "20px 40px 20px 40px",
              "borderRadius": "5px 5px 0 0"
            },
            "body": {
              "background": "#FFFFFF",
              "padding": "20px",
              "borderRadius": "0 0 5px 5px"
            }
          }
        }
      },
      {
        "key": "confluence-connect-pastel",
        "icon": {
          "width": 110,
          "height": 70,
          "url": "/icon.png"
        },
        "name": {
          "value": "Confluence Pastel Theme"
        },
        "description": {
          "value": "A pastel theme for Confluence."
        },
        "availableGlobally": true,
        "lookAndFeel": {
          "headings": {
            "color": "#333333"
          },
          "links": {
            "color": "#F98F95"
          },
          "menus": {
            "hoverOrFocus": {
              "backgroundColor": "#3873AE"
            },
            "color": "#732D3E"
          },
          "bordersAndDividers": {
            "color": "#0D0E0E"
          },
          "header": {
            "backgroundColor": "#ACE5CE",
            "button": {
              "backgroundColor": "#F98F95",
              "color": "#FFFFFF"
            },
            "primaryNavigation": {
              "hoverOrFocus": {
                "backgroundColor": "#FBD4B6",
                "color": "#FFFFFF"
              },
              "color": "#FFFFFF"
            },
            "secondaryNavigation": {
              "hoverOrFocus": {
                "backgroundColor": "#FBD4B6",
                "color": "#FFFFFF"
              },
              "color": "#000000"
            },
            "search": {
              "backgroundColor": "#FAACA6",
              "color": "#FFFFFF"
            }
          },
          "content": {
            "screen": {
              "background": "#FBD4B6",
              "gutterTop": "20px",
              "gutterRight": "small",
              "gutterBottom": "20px",
              "gutterLeft": "small"
            },
            "container": {
              "background": "#F4D4D8",
              "padding": "0",
              "borderRadius": "10px"
            },
            "header": {
              "background": "#FFFFFF",
              "padding": "20px 20px 0 20px",
              "borderRadius": "5px 5px 0 0"
            },
            "body": {
              "background": "#FFFFFF",
              "padding": "20px",
              "borderRadius": "0 0 5px 5px"
            }
          }
        }
      }
    ]
  }
}
